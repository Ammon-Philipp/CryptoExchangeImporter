@{
    ViewData["Title"] = "Home";
}

<div class="row">
    <div class="col-lg-10">
        <h1 class="mb-3">Crypto Exchange Importer</h1>

        <p class="lead">
            Import von Exchange-JSON-Files in SQL Server.
        </p>

        <div class="alert alert-secondary">
            <strong>Setup:</strong> ConnectionString in <code>src/CryptoExchangeImporter.Web/appsettings.json</code> anpassen, dann F5.
        </div>

        <div class="d-flex gap-2">
            <a class="btn btn-primary" asp-controller="Import" asp-action="Index">JSON importieren</a>
            <a class="btn btn-outline-primary" asp-controller="Exchanges" asp-action="Index">Importierte Exchanges ansehen</a>
        </div>
    </div>
</div>